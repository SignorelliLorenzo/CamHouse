@page
@model ResendEmailConfirmationModel
@{
    Layout = "~/Pages/Layout/_ResendEmailLayout.cshtml";
}

<div class="Body-ResendEmail">
    <!-- Body Login -->
    <div class="row Row-mid">
        <div class="col col-md-4 col-img">
            <img src="~/Img/resendemail.png" alt="Resend Email Img" id="ResendEmailImg" />
            <div class="Social-login">
                <a href=""><i class='bx bxl-instagram'></i></a>
                <a href=""><i class='bx bxl-twitter'></i></a>
                <a href=""><i class='bx bxl-discord'></i></a>
                <a href=""><i class='bx bxl-facebook'></i></a>
            </div>
        </div>
        <div class="col col-md-1">
        </div>
        <div class="col col-md-4 col-form">
            <h1 id="Title-login">Resend Email</h1>
            <h4 id="Subtitle-login">
                Hey! Benevenuto nella pagina "LOGIN" qui potrai accedere al tuo account, se non sei ancora registrato usa il pulsante infondo
            </h4>
            <section>
                <form id="account" method="post">
                    <div id="REForm form-group">
                        <input type="email" asp-for="Input.Email" id="re-check" placeholder="Email"
                               autocomplete="off" />
                        <span id="re-msg" asp-validation-for="Input.Email"></span>
                    </div>
                    <div id="SForm form-group">
                        <input type="submit" id="SubmitResendEmail" value="Rimanda" />
                    </div>
                    <div id="ResendEmail form-group">
                        <a asp-page="./Login" class="ResendLogin"><i class='bx bxs-user-plus' style="font-size: 32px; position:absolute; transform: translateX(-50px);"></i>Torna al LOGIN</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
