@page
@model ForgotPasswordConfirmation
@{
    Layout = "~/Pages/Layout/_ForgotPasswordConfirmLayout.cshtml";
}

<div class="Body-ForgotPassword">
    <!-- Body Login -->
    <div class="row Row-mid">
        <div class="col-md-4 col-img">
            <img src="~/Img/fpsw.png"
                 alt="Forgot Password Confirmation Img"
                 id="img-fpc" />
            <div class="text-fpc">
                <h3 id="Title-fpc">L'email è stata inviata!</h3>
                <p class="Subtitle-fpc">
                    Ti preghiamo di controllare l'email per il reset della password
                </p>
                <a class="fpcIndex" asp-page="/CrudPages/Index">Clicca per ritornare al login!</a>
            </div>
            <div class="Social-fpc">
                <a href=""><em class="bx bxl-instagram"></em></a>
                <a href=""><em class="bx bxl-twitter"></em></a>
                <a href=""><em class="bx bxl-discord"></em></a>
                <a href=""><em class="bx bxl-facebook"></em></a>
            </div>
        </div>
    </div>
</div>