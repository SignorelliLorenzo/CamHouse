<!DOCTYPE html>

<html>
<head>
    <title>Forgot Password?</title>

    <!-- Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width-device, initial-scale=1.0" />

    <!-- Links -->
    <link rel="stylesheet" href="~/css/FoPassword.css" asp-append-version="true" />
    <link rel="icon" href="~/Img/tabicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

    <!-- Scripts -->
    <script src="https://unpkg.com/boxicons@2.1.1/dist/boxicons.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</head>
<body>
    @inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager
    <!-- Navbar -->
    <div class="navbarcustom">
        <ul>
            @if (SignInManager.IsSignedIn(User))
            {
                <li style="float: left;" class="loader-nav-namelogo">
                    <a>Cam<br>House</a>
                </li>
                <li class="RealBodyLinksNavLogout">
                    <form class="form-inline LOForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button href="" type="submit" class="logout"><i class='bx bx-exit bxlogout'></i> @User.Identity.Name</button>
                    </form>
                </li>
                <li class="RealBodyLinksNav">
                    <a asp-area="" asp-page="/CrudPages/View">View</a>
                </li>
                <li class="RealBodyLinksNav">
                    <a asp-area="" asp-page="/Index"><i class='bx bx-home-alt bxhomeicon'></i>Home</a>
                </li>
            }
            else
            {
                <li style="float: left;" class="loader-nav-namelogo">
                    <a>Cam<br>House</a>
                </li>
                <li class="RealBodyLinksNav">
                    <a asp-area="Identity" asp-page="/Account/Login">Account</a>
                </li>
                <li class="RealBodyLinksNav">
                    <a asp-area="" asp-page="/Index"><i class='bx bx-home-alt bxhomeicon'></i>Home</a>
                </li>
            }
        </ul>
    </div>
    @RenderBody()
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
