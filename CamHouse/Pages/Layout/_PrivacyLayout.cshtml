@using CamHouse.Models.User
<!DOCTYPE html>
<html lang="it">
<head>
    <!-- Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width-device, initial-scale=1.0" />

    <!-- Links -->
    <link rel="stylesheet" href="~/css/PrivacyStyle.css" asp-append-version="true" />
    <link rel="icon" href="~/Img/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'><!-- Sensitive -->
</head>
<body>
    <div class="LoginBody">
        @inject SignInManager<UserData> SignInManager
        @inject UserManager<UserData> UserManager
        <!-- Navbar -->
        <div class="navbarcustom">
            <ul>
                @if (SignInManager.IsSignedIn(User))
                {
                    @*<li class="RealBodyLinksNav">
                <a asp-area="Identity" asp-page="/Account/Register">Account</a>
            </li>*@
                    <li style="float: left;" class="loader-nav-namelogo">
                        <a>Cam<br>House</a>
                    </li>
                    <li class="RealBodyLinksNavLogout">
                        <form class="form-inline LOForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button href="" type="submit" class="logout"><em class='bx bx-exit bxlogout'></em> @User.Identity.Name</button>
                        </form>
                    </li>
                    <li class="RealBodyLinksNav">
                        <a asp-area="" asp-page="/CrudPages/Privacy">Privacy</a>
                    </li>
                    <li class="RealBodyLinksNav">
                        <a asp-area="" asp-page="/CrudPages/View">View</a>
                    </li>
                    <li class="RealBodyLinksNav">
                        <a asp-area="" asp-page="/Index"><em class='bx bx-home-alt'></em>Home</a>
                    </li>
                }
                else
                {
                    <li style="float: left;" class="loader-nav-namelogo">
                        <a>Cam<br>House</a>
                    </li>
                    <li class="RealBodyLinksNav">
                        <a asp-area="Identity" asp-page="/Account/Login">Account</a>
                    </li>
                }
            </ul>
        </div>

        @RenderBody()
    </div>
</body>

</html>
